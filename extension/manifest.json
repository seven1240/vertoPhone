{
  "manifest_version": 2,
  "name"            : "Verto Phone Extension - XYT",
  "description"     : "FreeSWITCH verto phone extension.",
  "short_name"      : "Verto phone extension",
  "version"         : "0.4.1",
  "author"          : "navrotskyj@gmail.com",
  "minimum_chrome_version": "23",
  "icons": {
    "16": "images/telephone-16x16.png",
    "128": "images/telephone-128x128.png",
    "256": "images/telephone-256x256.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "storage",
    "background",
    "<all_urls>",
    "management"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/jquery-1.10.2.min.js", "lib/CTITelephony/ContentPage.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": [
      "lib/CTITelephony/Process.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/telephone-16x16.png",
    "default_popup": "popup.html"
  }
}
